<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
        <item name="android:windowBackground">@color/primary_light</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Image Header -->
    <style name="head_image" parent="lyn_layout">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/mdesigns1</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="collapseImage">
        <item name="android:background">@drawable/quiz_head</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="img_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <!-- Appbar -->
    <style name="collapsedAppbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/collapsedText</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appBarLayout">
        <item name="android:layout_height">@dimen/appbarHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/Theme.AppCompat.Light.DarkActionBar</item>
    </style>

    <style name="expandedAppbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/expandedText</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">3dp</item>

    </style>

    <!-- Collapsing Toolbar -->
    <style name="CollapsingToolbarLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Layout style-->
    <style name="lyn_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#E0E0E0</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="match_layout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- First page text style-->
    <style name="intro0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/introText</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:elevation">@dimen/tElevation</item>
        <item name="android:layout_marginBottom">@dimen/marginVertical</item>
    </style>


    <style name="web_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/headerText</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:elevation">@dimen/tElevation</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/marginVertical</item>
    </style>

    <!-- Button style-->
    <style name="btn_style" parent="lyn_layout">
        <item name="android:background">@color/cardBackground</item>
        <item name="android:textColor">@color/btn_text</item>

    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/cardBackground</item>
    </style>


    <style name="sample_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/headerText</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:elevation">@dimen/tElevation</item>
        <item name="android:padding">@dimen/tPadding</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>

    </style>

    <!-- Question box, radiogroup style-->
    <style name="questionBox" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:elevation">@dimen/tElevation</item>
    </style>

    <!-- Question box, radiogroup style-->
    <style name="RadioGroup" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="answerStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/answerText</item>
        <item name="android:padding">@dimen/tPadding</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>

    </style>


    <!-- Edittext style-->
    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">@dimen/headerText</item>
    </style>


</resources>
